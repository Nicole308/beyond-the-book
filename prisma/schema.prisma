// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider          = "postgresql"
    url               = env("DATABASE_URL")
    shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
    id          Int      @id @default(autoincrement())
    email       String   @unique
    userName    String   @unique
    password    String
    firstName   String
    lastName    String
    birthday    DateTime @db.Date
    books       Book[]
    dateCreated DateTime @default(now())
}

model Book {
    id          Int      @id @default(autoincrement())
    title       String
    genreID     Int
    description String
    author      User     @relation(fields: [authorName], references: [userName])
    authorName  String
    pages       Page[]
    dateCreated DateTime @default(now())
    update      Update[]
}

model Page {
    id          Int      @id @default(autoincrement())
    chapterName String
    pageNumber  Int
    body        String
    book        Book     @relation(fields: [bookID], references: [id])
    bookID      Int
    dateCreated DateTime @default(now())
    update      Update[]
}

model Genre {
    id    Int    @id @default(autoincrement())
    genre String
}

model Update {
    id          Int       @id @default(autoincrement())
    bookID      Int
    userID      Int
    body        String
    status      String
    message     Message[]
    bookOwner   Book      @relation(fields: [bookOwnerID], references: [id])
    bookOwnerID Int
    commit      String
    Page        Page      @relation(fields: [pageID], references: [id])
    pageID      Int
}

model Message {
    id       Int     @id @default(autoincrement())
    message  String?
    reply    String?
    update   Update  @relation(fields: [updateID], references: [id])
    updateID Int
}
