extends layout

block content
	div(class= "bd-masthead mb-3")
		div.fs-4( class="container px-4 px-md-3")
			div(class ="row align-items-lg-center")
				div(class="col-12 mx-auto col-md-6 order-md-2 col-lg-8")
					form(action="/users/login", method='POST')
						fieldset
							p(class="fieldsettitle") Log in to Beyond the Books
							div.mt-5
								label(for="email") Email:
								input(type="email", id="email", name="email", required=true)
							div
								label(for="password") Password:
								input(type="password", id="password", name="password", required=true)
							div
								<p>Dont have an OpenSource Textbook account?<a href="/users/register" title="Signup"><b> Sign Up</a></p>
								button(alt="login" type="submit", class="buttonAnimation")
									<i>L</i>
									<i>O</i>
									<i>G</i>
									<i>I</i>
									<i>N</i>
						</fieldset>