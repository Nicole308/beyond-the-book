extends layout

block content
	h1 Modify Page
	p This is where you edit details of your book page. 
	hr
	form(action=`/books/page/modify/${page.id}`, method='POST')
		div
			label Chapter Name:
			input(type="text", name='chapterName')
		div
			label Page Number:
			input(type="number", name='pageNumber')
		div
			label Content:
			textarea(name='body')
		div
			button(type="submit") Update
			| 
			a(href=`/books/page/${page.id}`) Cancel